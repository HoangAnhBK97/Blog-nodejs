<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">


    <title>Ho√†ng Anh BK</title>

    <%- include layout/head%>
    <style>
        a:hover{
            text-decoration: none;
        }
    </style>
</head>

<body style="background-color:#E0F5D1">

    <%- include layout/nav %>

    <!-- Page Header -->
    <header class="masthead" style="background-image: url('/static/images/home.jpg')">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="site-heading">
                        <h1>My Blog</h1>
                        <span class="subheading">Share your knowledge. It is a way to achieve immortality !!</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <% if(data && data.posts){ %>
                    <% for(var i =0; i<data.posts.length; i++){%>
                        <div class="post-preview">
                            <div class="row">
                                    <div class="col-sm-4">
                                        <img src="/static/images/<%=data.posts[i].image%>" alt="Image" width="250px" height="185px" style="border-radius : 8px;">
                                    </div>
                                    <div class="col-sm-8">
                                        <a href="/blog/post/<%=data.posts[i].id%>">
                                            <h3 style="color : #F09409 ; font-size: 25px;">
                                                <%= data.posts[i].title%>
                                            </h3>
                                            <h6 class="post-subtitle">
                                                <%- data.posts[i].content.substring(0,210)%>...
                                            </h6>
                                        </a>
                                        <p class="post-meta" style="font-size :16px">Posted by
                                            <a href="/about">
                                                <%= data.posts[i].author%>
                                            </a>
                                            on
                                            <%= data.posts[i].created_at%>
                                        </p>
                                        <button  class="btn btn-info btn-xs" style=" border-radius : 8px; margin-top : -10px;"> <a href="" style="text-decoration: none ; color:aliceblue">Continue reading...</a> </button>
                                    </div>
                                </div>
                        </div>
                        <hr>
                        <%}%>
                        <%}%>
                        <!-- Pager -->
                        <!-- <div class="clearfix">
                            <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
                        </div> -->
            </div>
        </div>
    </div>

    <hr>

    <!-- Footer -->
    <%- include layout/footer %>

    <!-- Bootstrap core JavaScript -->
    <script src="/static/vendor/jquery/jquery.min.js"></script>
    <script src="/static/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Custom scripts for this template -->
    <script src="/static/js/clean-blog.min.js"></script>

</body>

</html>